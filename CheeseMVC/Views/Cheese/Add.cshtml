@model CheeseMVC.ViewModels.AddCheeseViewModel

<h1>Add Cheese</h1>

<!---'asp'-helper tags provided by Razor engine are used to generate some html that is tied to the view model classes
this code is now cleaner and tied to the view model-->
<form asp-controller="Cheese" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>

    <input type = "submit" value="Add Cheese" />

</form>